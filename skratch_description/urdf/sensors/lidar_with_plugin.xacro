<?xml version="1.0"?>
<robot name="lidar_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="lidar_with_plugin" params="name ros_topic update_rate min_angle max_angle">
    
    <!-- Link with STL geometry -->
    <link name="${name}_link">
      <inertial>
        <origin xyz="0.0 0.0 0.027537" rpy="0.0 0.0 0.0" />
        <mass value="0.1" />
        <inertia ixx="0.00006111" iyy="0.00004167" izz="0.00006111" ixy="0.0" iyz="0.0" ixz="0.0" />
      </inertial>
      <visual>
        <origin xyz="0.0 0.0 0.06" rpy="0.0 3.14 0.0" />
        <geometry>
          <mesh filename="file://$(find skratch_description)/meshes/lidar/lidar.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="Black">
          <color rgba="0 0 0 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.6" rpy="0.0 3.14 0.0" />
        <geometry>
          <mesh filename="file://$(find skratch_description)/meshes/lidar/lidar.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <!-- Gazebo material -->
    <gazebo reference="${name}_link">
      <material>Gazebo/Black</material>
    </gazebo>

    <!-- Gazebo sensor plugin -->
    <gazebo reference="${name}_link">
      <sensor name="${name}" type="ray">
        <update_rate>${update_rate}</update_rate>
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <ray>
          <scan>
            <horizontal>
              <samples>150</samples>
              <resolution>1.0</resolution>
              <min_angle>${min_angle}</min_angle>
              <max_angle>${max_angle}</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.05</min>
            <max>5.6</max>
            <resolution>0.36</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>

        <plugin name="gazebo_ros_${name}_controller" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <remapping>~/out:=${ros_topic}</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <frame_name>${name}_link</frame_name>
        </plugin>
      </sensor>
    </gazebo>

  </xacro:macro>
</robot>
